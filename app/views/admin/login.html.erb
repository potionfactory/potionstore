<script type="text/javascript">
onload = function() { document.getElementById("username").focus(); };
</script>

<h3>Magic Potion Required</h3>

<%= form_tag :action => "login" do %>
<table>
	<tr>
		<td>
			<label for="username">magic:</label>
		</td>
		<td>
			<%= text_field_tag "username" %>
		</td>
	</tr>
	<tr>
		<td align="right">
			<label for="password">potion:</label>
		</td>
		<td>
			<%= password_field_tag "password" %>
		</td>
	</tr>
	<tr>
		<td></td>
		<td>
			<%= submit_tag "Abracadabra" %>
		</td>
	</tr>
</table>
<% end %>
